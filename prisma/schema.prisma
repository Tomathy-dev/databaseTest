// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model File {
  id           Int      @id @default(autoincrement())
  name         String
  email        String?
  phoneNumber  Int?
  personal     Boolean
  matter_final Int      @default(0)
  matters      Matter[]
}

model Matter {
  file        File          @relation(fields: [fileId], references: [id])
  fileId      Int
  matter      Int
  department  String
  inCharge    String
  Transaction Transaction[]

  @@id([fileId, matter])
}

model Transaction {
  id                Int      @id @default(autoincrement())
  matterRelation    Matter   @relation(fields: [file, matter], references: [fileId, matter])
  file              Int
  matter            Int
  date              DateTime
  transactionMethod String
  description       String
  value             BigInt   @db.BigInt
  Ledger            Ledger   @relation(fields: [bank], references: [name])
  bank              String
  color             String?
}

model Ledger {
  cardNumber  String        @id
  name        String        @unique
  totalValue  BigInt        @default(0) @db.BigInt
  Transaction Transaction[]
}
